{
  "private": true,
  "name": "jukebox",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo 'We need to setup ava first'",
    "format": "yarn prettier --write .",
    "build": "oao all tsc --tree",
    "watch": "oao all --parallel \"tsc -w --preserveWatchOutput\"",
    "status": "oao status",
    "bootstrap": "oao bootstrap",
    "run": "tsc config.sample.ts && node -r source-map-support packages/jukebox/lib/index.js config.sample.js"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.37",
    "@types/promise-queue": "^2.2.0",
    "@types/xxhashjs": "^0.2.2",
    "ava": "2.4.0",
    "husky": "3.0.9",
    "oao": "2.0.2",
    "prettier": "2.2.1",
    "pretty-quick": "2.0.0",
    "source-map-support": "0.5.16",
    "ts-node": "8.4.1",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "comment-json": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "promise-queue": "^2.2.5",
    "xxhashjs": "^0.2.2"
  }
}
